<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Detalle.Detalleragment">

    <TextView
        android:id="@+id/txtDeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="-62dp"
        tools:layout_editor_absoluteY="-45dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="357dp"
            android:layout_height="215dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/prod1" />

        <TextView
            android:id="@+id/txtproduct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Nombre del producto"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtproduct_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del producto"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnRentar"
            android:layout_width="378dp"
            android:layout_height="64dp"
            android:backgroundTint="#EFB810"
            android:text="@string/Rentar"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.654"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>